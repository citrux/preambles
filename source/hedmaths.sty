\if@root
    \RequirePackage{letltxmacro}
    \let\oldr@@t\r@@t
    \def\r@@t#1#2{%
    \setbox0=\hbox{$\oldr@@t#1{#2\,}$}\dimen0=\ht0
    \advance\dimen0-0.2\ht0
    \setbox2=\hbox{\vrule height\ht0 depth -\dimen0}%
    {\box0\lower0.4pt\box2}}
    \LetLtxMacro{\varsqrt}{\sqrt}
    \renewcommand*{\sqrt}[2][\ ]{\varsqrt[#1]{#2}}
\fi
