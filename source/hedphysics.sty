\NeedsTeXFormat{LaTeX2e}[1995/06/01]
\ProvidesPackage{hedphysics}[2014/11/17 v0.1.9]

\newif\if@electricity
\newif\if@atomic
\newif\if@nuclear
\newif\if@quantum
\@electricityfalse
\@atomicfalse
\@nuclearfalse
\@quantumfalse

\DeclareOption{electricity}{
    \@electricitytrue
}

\DeclareOption{atomic}{
    \@atomictrue
}

\DeclareOption{nuclear}{
    \@nucleartrue
}

\DeclareOption{quantum}{
    \@quantumtrue
}

\ExecuteOptions{}
\ProcessOptions
\if@electricity
    \newcommand{\Ez}{\varepsilon_0}
    \newcommand{\Mz}{\mu_0}
    \RequirePackage{amssymb}
    \newcommand{\EMF}{\mathcal{E}}
\fi

\if@atomic
    \newcommand{\term}[3]{\ensuremath{\vphantom{#2}^{#1}#2_{#3}}}
\fi

\if@nuclear
    \newcommand{\nucleus}[3]{
    \ensuremath{
        \phantom{\ensuremath{^{#1}_{#2}}}
        \llap{\ensuremath{^{#1}}}
        \llap{\ensuremath{_{\rule{0pt}{.75em}#2}}}
        \mbox{#3}}
    }
\fi

\if@quantum
    \newcommand{\bra}[1]{\ensuremath{\left\langle#1\right|}}    % <1|
    \newcommand{\ket}[1]{\ensuremath{\left|#1\right\rangle}}    % |1>
    \newcommand{\scalar}[2]{\ensuremath{
        \left\langle#1\middle|#2\right\rangle}
    }                                                           % <1|2>
    \newcommand{\impact}[3]{\ensuremath{\left\langle#1\middle|  % <1|2|3>
        #2\middle|#3\right\rangle}
    }
\fi
